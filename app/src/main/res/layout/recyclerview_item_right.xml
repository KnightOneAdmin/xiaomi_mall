<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_107">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_category_banner"
        android:id="@+id/item_right_iv_banner"/>
    <RelativeLayout
        android:id="@+id/rl_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_right_iv_banner">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:text="大类"
            android:textColor="@color/color_100"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_title_whole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="全部 >"
            android:textColor="@color/color_001"
            android:textSize="12sp" />
    </RelativeLayout>

    <com.knight.xiaomimall.weight.CustomGridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_whole"
        android:background="@color/color_109"
        android:numColumns="3" />
</RelativeLayout>